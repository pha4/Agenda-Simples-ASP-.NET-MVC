<div class="panel panel-primary">

    <div class="panel-heading"> <h2> Editar Dados do Contato </h2> </div>

    <div class="panel-body">

       <form method="post" action="/Home/update" class="form">

           <input type="hidden" name="Contato.contatoId" id="id" value="@ViewBag.Contato.contatoId " />

           <div class="form-group">
               <span class="glyphicon glyphicon-user text-muted">  </span>
               <label for="nome" class="text-muted"> Quem é você? </label>
               <input type="text" name="Contato.nomeCompleto" id="nome" value="@ViewBag.Contato.nomeCompleto" class="form-control" placeholder="Nome" />           
               @Html.ValidationMessage("contato.nomeCompleto")
           </div>


           <div class="form-group">
               <span class="glyphicon glyphicon-home  text-muted"></span>
               <label for="endereco" class="text-muted"> Onde vive? </label>
               <input type="text" name="Contato.endereco" id="endereco" value="@ViewBag.Contato.endereco" class="form-control" placeholder="Endereço" />
               @Html.ValidationMessage("contato.endereco")
           </div>

           <div class="form-group">
               <span class="glyphicon glyphicon-phone-alt  text-muted"></span>
               <label for="telefone" class="text-muted"> Como o encontro? </label>
               <input type="text" name="Contato.telefone" id="telefone" value="@ViewBag.Contato.telefone" class="form-control" placeholder="Telefone" />
               @Html.ValidationMessage("contato.telefone")

            </div>

            <div class="form-group">

                <input type="submit" value="Atualizar" class="btn btn-primary" />
        
            </div>
       </form>
    </div>
</div>


<nav>
    <ul class="pager">

        <li class="previous"> @Html.ActionLink("← VOLTAR", "index", "Home")</li>

    </ul>
</nav>
